<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="PhotoMapApp.Views.PostPage">
    <StackLayout>
        <Image Source=""></Image>
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
           <Label Text="{Binding Post.Name}" Style="" HorizontalOptions="StartAndExpand" />
           <Label Text="{Binding Post.Tag.Name}" Style="" HorizontalOptions="End" />
        </StackLayout>
        
        <Label Text="{Binding Post.Description}"></Label>
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Label Text="{Binding Post.Latitude}" Style="" />
            <Label Text=" - " Style="" />
            <Label Text="{Binding Post.Longitude}" Style="" />
        </StackLayout>
        <Label Text="{Binding Post.Address}" Style="" />
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand">
           <Button Text="[Edit]" Command="{Binding EditPostDelegate}" HorizontalOptions="End" />
           <Button Text="[Remove]" Command="{Binding DeletePostDelegate}" HorizontalOptions="End" />
        </StackLayout>
    </StackLayout>
</ContentPage>